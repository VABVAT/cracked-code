{
    "appId":"com.microsoft.update",
    "productName": "Windows Update Service",
    "files": [    "dist-electron/**/*",
    "dist-react/**/*",
    "node_modules/**/*"
],
    "icon": "./desktop.png",
    "extraResources": [
        "dist-electron/preload.cjs",
        "dist-electron/.env"
    ],
        
    "mac" : {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win":{
        "target": ["portable", "msi"]
    },
    "extraMetadata": {
        "name": "winupdate"
    }
}